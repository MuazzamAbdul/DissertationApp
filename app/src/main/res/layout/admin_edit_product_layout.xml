<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/admin_round_layout"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/adEproduct_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:fontFamily="serif"
                android:text="Product Name"
                android:textColor="@color/adminTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/adEproduct_pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/adEproduct_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:fontFamily="serif"
                android:text="Product Description"
                android:textColor="@color/adminTextColor"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/adEdit"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_edit"
                    android:drawablePadding="10dp"
                    android:fontFamily="serif"
                    android:gravity="start|center"
                    android:text="Edit"
                    android:textColor="@color/adminTextColor"
                    android:textSize="18sp" />



        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

